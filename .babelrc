{
    "presets": [
        ["es2015", { "modules": false }],
        "stage-2",
        "react"
    ],
    "plugins": [
        "transform-class-properties",
        "transform-object-rest-spread",
        "transform-decorators-legacy",
        "react-hot-loader/babel"
    ],
    "env": {
        "production": {
            "presets": ["react-optimize"]
        },
        "test": {
            "plugins": ["transform-es2015-modules-commonjs"]
        }
    }
}
